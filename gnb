import React, { useEffect, useRef, useState } from "react";
// other imports...

const Exam = () => {
  const [data, setData] = useState<YourDataType[]>(exam);
  const [newExam, setNewExam] = useState<{ examName: string; examDate: string; startTime: string; endTime: string }>({
    examName: "",
    examDate: dayjs().format("DD-MM-YYYY"),
    startTime: "",
    endTime: "",
  });

  const handleStartTimeChange = (option: Option | null) => {
    setNewExam({ ...newExam, startTime: option ? option.value : "" });
  };

  const handleEndTimeChange = (option: Option | null) => {
    setNewExam({ ...newExam, endTime: option ? option.value : "" });
  };

  const handleAddExam = (e: React.FormEvent) => {
    e.preventDefault();
    const examWithId = { ...newExam, id: String(data.length + 1) };
    setData([...data, examWithId]); // Update the exam list
    setNewExam({ examName: "", examDate: dayjs().format("DD-MM-YYYY"), startTime: "", endTime: "" }); // Reset form
  };

  return (
    <div>
      {/* Your component JSX */}
      <CommonSelect
        className="select"
        options={startTime}
        onChange={handleStartTimeChange} // Correct usage
      />
      <CommonSelect
        className="select"
        options={startTimeOne}
        onChange={handleEndTimeChange} // Correct usage
      />
      {/* More JSX for adding exams */}
    </div>
  );
};

export default Exam;
