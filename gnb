import React, { useEffect, useState } from "react";
import Select, { StylesConfig } from "react-select";

export type Option = {
  value: string;
  label: string;
};

export interface SelectProps {
  options: Option[];
  defaultValue?: Option;
  className?: string;
  styles?: StylesConfig<Option>; // Define the type for styles
  onChange?: (option: Option | null) => void; // Callback when the value changes
}

const CommonSelect: React.FC<SelectProps> = ({
  options,
  defaultValue,
  className,
  styles,
  onChange,
}) => {
  const [selectedOption, setSelectedOption] = useState<Option | null>(defaultValue || null);

  const handleChange = (option: Option | null) => {
    setSelectedOption(option);
    if (onChange) {
      onChange(option); // Call the onChange prop with the selected option
    }
  };

  useEffect(() => {
    setSelectedOption(defaultValue || null); // Update state when defaultValue changes
  }, [defaultValue]);

  return (
    <Select
      classNamePrefix="react-select"
      className={className}
      styles={styles}
      options={options}
      value={selectedOption}
      onChange={handleChange}
      placeholder="Select"
    />
  );
};

export default CommonSelect;
