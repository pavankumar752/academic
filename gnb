const handleSelectChange = (option: Option | null) => {
  if (option) {
    setNewExam((prev) => ({
      ...prev,
      [option.value]: option.label, // Adjust based on how you want to set the new exam data
    }));
  } else {
    // Handle the case where the selection is cleared, if needed
    setNewExam((prev) => ({
      ...prev,
      // Clear or reset the field as needed
    }));
  }
};
