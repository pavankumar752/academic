// DualListComponent.js
import React, { useState } from 'react';
import styled from 'styled-components';

const Container = styled.div`
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
`;

const ListContainer = styled.div`
  margin: 0 20px;
  text-align: center;
`;

const List = styled.ul`
  list-style: none;
  padding: 0;
  border: 1px solid #333;
  height: 300px;
  overflow-y: auto;
`;

const ListItem = styled.li`
  padding: 10px;
  cursor: pointer;
  background-color: #f0f0f0;
  margin: 5px 0;

  &:hover {
    background-color: #ccc;
  }
`;

const Button = styled.button`
  margin: 10px;
  padding: 10px;
`;

const DualListComponent = () => {
  const [leftList, setLeftList] = useState(['Item 1', 'Item 2', 'Item 3']);
  const [rightList, setRightList] = useState(['Item A', 'Item B', 'Item C']);
  const [selectedLeft, setSelectedLeft] = useState(null);
  const [selectedRight, setSelectedRight] = useState(null);

  const handleDoubleClick = (index, listType) => {
    const newItem = prompt("Enter new value:", listType === 'left' ? leftList[index] : rightList[index]);
    if (newItem) {
      if (listType === 'left') {
        setLeftList(prev => prev.map((item, i) => (i === index ? newItem : item)));
      } else {
        setRightList(prev => prev.map((item, i) => (i === index ? newItem : item)));
      }
    }
  };

  const moveToRight = () => {
    if (selectedLeft !== null) {
      const item = leftList[selectedLeft];
      setLeftList(prev => prev.filter((_, index) => index !== selectedLeft));
      setRightList(prev => [...prev, item]);
      setSelectedLeft(null);
    }
  };

  const moveToLeft = () => {
    if (selectedRight !== null) {
      const item = rightList[selectedRight];
      setRightList(prev => prev.filter((_, index) => index !== selectedRight));
      setLeftList(prev => [...prev, item]);
      setSelectedRight(null);
    }
  };

  return (
    <Container>
      <ListContainer>
        <h3>Left List</h3>
        <List>
          {leftList.map((item, index) => (
            <ListItem
              key={index}
              onClick={() => setSelectedLeft(index)}
              onDoubleClick={() => handleDoubleClick(index, 'left')}
            >
              {item}
            </ListItem>
          ))}
        </List>
        <Button onClick={moveToRight}> &gt; </Button>
      </ListContainer>
      <ListContainer>
        <h3>Right List</h3>
        <List>
          {rightList.map((item, index) => (
            <ListItem
              key={index}
              onClick={() => setSelectedRight(index)}
              onDoubleClick={() => handleDoubleClick(index, 'right')}
            >
              {item}
            </ListItem>
          ))}
        </List>
        <Button onClick={moveToLeft}> &lt; </Button>
      </ListContainer>
    </Container>
  );
};

export default DualListComponent;
