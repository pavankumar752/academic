import React, { useState } from 'react';
import styled from 'styled-components';

// Styled Components
const Container = styled.div`
  padding: 20px;
`;

const Title = styled.h1`
  margin-bottom: 20px;
`;

const Table = styled.table`
  width: 100%;
  border-collapse: collapse;
`;

const TableHeader = styled.th`
  border: 1px solid #ddd;
  padding: 8px;
  background-color: #f2f2f2;
`;

const TableCell = styled.td`
  border: 1px solid #ddd;
  padding: 8px;
`;

const Input = styled.input`
  width: 80px;
  padding: 5px;
`;

const Button = styled.button`
  margin-top: 20px;
  padding: 10px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  &:hover {
    background-color: #0056b3;
  }
`;

const Form = styled.form`
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
`;

const StudentsMarksEntry = () => {
  const [students, setStudents] = useState([]);
  const [newStudent, setNewStudent] = useState({ id: '', name: '', marks: {} });

  const handleChange = (e) => {
    const { name, value } = e.target;
    if (name === 'id' || name === 'name') {
      setNewStudent((prev) => ({ ...prev, [name]: value }));
    } else {
      setNewStudent((prev) => ({
        ...prev,
        marks: { ...prev.marks, [name]: value }
      }));
    }
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    setStudents((prev) => [...prev, newStudent]);
    setNewStudent({ id: '', name: '', marks: {} });
  };

  return (
    <Container>
      <Title>Students Marks Entry</Title>
      <Form onSubmit={handleSubmit}>
        <Input
          type="text"
          name="id"
          value={newStudent.id}
          onChange={handleChange}
          placeholder="ID"
          required
        />
        <Input
          type="text"
          name="name"
          value={newStudent.name}
          onChange={handleChange}
          placeholder="Name"
          required
        />
        {['English', 'Telugu', 'Hindi', 'Maths', 'Physics', 'Chemistry', 'Social'].map((subject) => (
          <Input
            key={subject}
            type="number"
            name={subject}
            value={newStudent.marks[subject] || ''}
            onChange={handleChange}
            placeholder={subject}
            required
          />
        ))}
        <Button type="submit">Add Student</Button>
      </Form>
      <Table>
        <thead>
          <tr>
            <TableHeader>ID</TableHeader>
            <TableHeader>Name</TableHeader>
            <TableHeader>English</TableHeader>
            <TableHeader>Telugu</TableHeader>
            <TableHeader>Hindi</TableHeader>
            <TableHeader>Maths</TableHeader>
            <TableHeader>Physics</TableHeader>
            <TableHeader>Chemistry</TableHeader>
            <TableHeader>Social</TableHeader>
          </tr>
        </thead>
        <tbody>
          {students.map((student, index) => (
            <tr key={index}>
              <TableCell>{student.id}</TableCell>
              <TableCell>{student.name}</TableCell>
              <TableCell>{student.marks.English || '-'}</TableCell>
              <TableCell>{student.marks.Telugu || '-'}</TableCell>
              <TableCell>{student.marks.Hindi || '-'}</TableCell>
              <TableCell>{student.marks.Maths || '-'}</TableCell>
              <TableCell>{student.marks.Physics || '-'}</TableCell>
              <TableCell>{student.marks.Chemistry || '-'}</TableCell>
              <TableCell>{student.marks.Social || '-'}</TableCell>
            </tr>
          ))}
        </tbody>
      </Table>
    </Container>
  );
};

export default StudentsMarksEntry;
